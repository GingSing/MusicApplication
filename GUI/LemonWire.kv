#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import main GUI.MusicAppGui

<CustButton@Button>:
	font_size: 15
	background_normal: ''
	background_color: 1, 0, 0, 1
	size_hint: 1, .1
	
<Background>:
	canvas:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size	
	spacing: 3
	orientation: 'vertical'
	TopMenu:
	Application:
		Options:
			SideMenu:
				CustButton:
					text:'Download'
					on_press: 
						manager.current = 'downloads'	
							
				CustButton:
					text: 'Playlist'
					on_press: 
						manager.current = 'playlist'
				
				CustButton:
					text: 'Songs'
					on_press: 
						manager.current = 'songs'
					
				CustButton:
					text: 'Settings'
					on_press: 
						manager.current = 'settings'
					
				Space:

		Output:	
			Manager: 
				id: manager
				transition: NoTransition()
				Downloads:
					
				PlayList:
				Songs:
				Setting:

<Options>:
	size_hint: .3, 1
	canvas:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	orientation: 'vertical'
	spacing: 5

<Output>:
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
		
<Manager>:

<Downloads>:
	name: 'downloads'
	id: downloads
	display: entry
	GridLayout:
		rows: 5
		padding: 10
		spacing: 10
		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				BoxLayout:
					orientation:'horizontal'
					size_hint: 1, .15
					TextInput:
						id: entry
						pos_hint: {'top': 1}
						font_size: 15
						multiline: False
					Button:
						text: 'Submit'
						size_hint: .5, 1
						on_press: root.submit_search(entry.text)
				BoxLayout:
					orientation: 'horizontal'
					size_hint: 1, .13
					Label:
						text: 'File Extension:'
						color: 0, 0, 0, 1
						size_hint_x: .35
						font_size: 15
					CheckBox:
						group:'ext'
						value: root.mp3
						size_hint_x: .05
						color: 1, 0, 0, 1
					Label:
						text: 'mp3'
						color: 0, 0, 0, 1
						size_hint_x: 0.15
						font_size: 13
					CheckBox:
						group:'ext'
						value: root.mp4
						size_hint_x: .05
						color: 1, 0, 0, 1
					Label:
						text: 'mp4'
						color: 0, 0, 0, 1
						size_hint_x: 0.15
						font_size: 13
				Space:
					canvas:
						Color:
							rgba: 1, 1, 1, 1
						Rectangle:
							pos: self.pos
							size: self.size
			Label:
				text: 'downloads'
				color: 0, 0, 0, 1
				size_hint: .5, 1
		ListView:
			id: result_list_view
			adapter:
				ListAdapter(data=[], cls=main.ResultListButton)
		
<Songs>:
	name: 'songs'
	Label: 
		text: 'songs'
		color: 0, 0, 0, 1
		
<PlayList>:
	name: 'playlist'
	Label:
		text: 'playlist'

<Setting>:
	name: 'settings'
	Label: 
		text: 'settings'
		color: 0, 0, 0, 1

<Space>:
	canvas:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size

<SideMenu>:
	size_hint: 1, .4
	orientation: 'vertical'
	canvas:
		Color:
			rgba: 0, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	spacing: 2
		
<TopMenu>:
	size_hint: 1, .05

<Application>:
	orientation: 'horizontal'
	spacing: 3
		